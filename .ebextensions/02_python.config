option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "ChildCard.settings"
    "PYTHONPATH": "/opt/python/current/app/ChildCard:$PYTHONPATH"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: ChildCard/wsgi.py
    NumProcesses: 3
    NumThreads: 20
  "aws:elasticbeanstalk:container:python:staticfiles":
    "/static/": "ChildCard/static/"

container_commands:
  01_migrate:
    command: "source /opt/python/run/venv/bin/activate && python manage.py migrate --noinput"
    leader_only: true